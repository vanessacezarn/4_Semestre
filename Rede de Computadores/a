http_port 3128
visible_hostname GrupoLuizaVanessa

# ACL de sites bloqueados via lista de URLs
acl sites_bloqueados url_regex -i "/etc/squid/bloqueados.txt"

# Redireciona usuários que acessarem sites bloqueados para sua página personalizada
deny_info http://10.104.16.7/grupoLuizaVanessa.html sites_bloqueados

# Aplica o bloqueio
http_access deny sites_bloqueados

# (Outras regras de acesso vêm depois — ex: permitir acesso geral, localhost, etc.)
